
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<GridPane minWidth="315.0" prefHeight="300.0" prefWidth="315.0" alignment="CENTER" hgap="10" vgap="10"
          fx:controller="BasketballDB.controllers.HomeController" xmlns:fx="http://javafx.com/fxml" >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <TextField fx:id="searchBar" GridPane.columnIndex="0" GridPane.rowIndex="0">
    </TextField>

    <Label style="-fx-font: NORMAL 20 Tahoma;"  text="Players"
           GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <TableView fx:id="playerTableView" GridPane.columnIndex="0"
               GridPane.rowIndex="2">
        <columns>
            <TableColumn text="First Name" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Last Name" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="lastName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Position" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="position" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Birth Day" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="dob" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
            </FXCollections>
        </items>
    </TableView>

    <Label style="-fx-font: NORMAL 20 Tahoma;"  text="Teams"
           GridPane.columnIndex="1" GridPane.rowIndex="1">
    </Label>
    <TableView fx:id="teamTableView" GridPane.columnIndex="1"
               GridPane.rowIndex="2">
        <columns>
            <TableColumn text="Name" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Conference" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="conference" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Year" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="year" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
            </FXCollections>
        </items>
    </TableView>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0"
          GridPane.rowIndex="2">
        <Button text="Add" onAction="#addPlayer"/>
    </HBox>
</GridPane>